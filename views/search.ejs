<!DOCTYPE html>
<html>

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" />

   <!-- Infinite Scroll based on API calls with jQuery -->
   <script src="//unpkg.com/jscroll/dist/jquery.jscroll.min.js"></script>
   <link rel="stylesheet" href="./css/profile.css">
   <link rel="stylesheet" href="./components/navbar/navbar.css">
   <link rel="stylesheet" href="./components/miniprofile/miniprofile.css">
   <link rel="stylesheet" href="../css/search.css">
   
   <link rel="shortcut icon" href="/images/favicon.ico" />
   <title>Grumblr</title>
</head>

<body>
    <% include ../public/components/Navbar/navbar.ejs %>

    <h2>Search Results</h2>
    
    <div class="searchContainer">
        <%
            if (locals.user) {
                if (user.length > 0) { 
                    for (var i=0; i<user.length; i++) { %>
                        <div class="searchResult">
                        <img class="ui avatar image" src="/images/avatar.png" id="avatar">
                        <h2><%=user[i].firstName%> <%=user[i].lastName%></h2>
                        <h3>Username: <%=user[i].username%></h3>
                        <h3>Followers: <%=user[i].following%></h3>
                        <h3>Following: <%=user[i].followers%></h3>
                        </div>
                    <%} 
                }
            }
        %>
        
    </div>
</body>
</html>