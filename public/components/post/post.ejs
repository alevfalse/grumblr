<!-- L O O P  C O N T E N T -->
<div class="post"> 

    <%
        if (posts[i].image != null) {
            if (posts[i].image.img) {
                var type = posts[i].image.img.contentType;
                console.log(type);
                var base64String = posts[i].image.img.data;
                var postContentImage = "data:"+type+";base64, "+base64String;
            }
        } else {
            var postContentImage = "";
        }
    %>
    <!-- POST: META-DATA -->
    <div class="postMeta">

        <div class="postDetails">
        <!-- USER: AVATAR --><img class="ui avatar image" src="<%= profileImage %>" class="postMetaAvatar">
        <!-- USER: USERNAME --><a href="/users/<%=posts[i].username%>" class="postMetaAuthorUsername"><strong><%=posts[i].username%></strong></a>
        <!-- META: DATE CREATED --><div class="postMetaDate">UTC Date</div>
        </div>

        <div class="postEdit">
            <div class="ui dropdown editDropDown">
            <!-- POST: EDIT BUTTON -->          <i class="icon ellipsis horizontal editButton"></i>
            <!-- POST: EDIT MENU DROPDOWN -->   <div class="menu left">
                                                    <a href="/delete/<%=posts[i]._id%>" class="item">Edit</a>
                                                    <a href="/delete/<%=posts[i]._id%>" class="item">Delete</a>
                                                </div>
            </div>
        </div>

    </div>
    
    
    <!-- POST: CONTENT -->
    <div class="postContentContainer">
        <!-- POST CONTENT: CAPTION/TEXT -->
        <p class="ui postContentText input">
            <%=posts[i].text%>
        </p>
        
        <!-- POST CONTENT: IMAGE --><img class="postContentImage" src="<%=postContentImage%>">
        <!-- ==if there is an image attached to this post, insert an "img" tag with an attribute class="postContentImage" and the source-->
    </div>


    <div class="ui accordion">
        
        <div class="title">
            <div class="comment">
                <i class="comment outline icon"></i>
                <%=posts[i].comments.length%> Comments
            </div>
            <i class="caret down icon dropCommentsIcon"></i>
        </div>

        <div class="content">
            <div class="commentSection">

                <!-- ============================ COMMENT INSTANCE -->
                <!-- <div class="personComment"> 
                    <img src="/images/avatar.png" alt="" class="ui avatar image" id="personAvatar">
                    <p>
                        <a href="profile link"><strong>friendUsername</strong></a><br>
                        this is some comment...
                    </p>
                </div>  -->
                <!-- ============================ COMMENT INSTANCE -->

            </div>

            <div class="ui divider"></div>

            <!-- comment form -->
            <form class="reply ui form" id="replyForm">
                <div class="field commentfield">
                    <img src="/images/avatar.png" alt="" class="ui avatar image" id="avatarImage">
                    <div class="ui right labeled left icon input">
                        <!-- comment text area -->
                        <textarea placeholder="Add Comment..." rows="1" id="commentField"></textarea>
                        <!-- reply button -->
                        <button class="ui button icon submit teal" type="submit" id="replyButton">
                            <i class="reply icon"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div> <!-- ui accordion -->
</div>